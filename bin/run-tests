#!/usr/bin/env ruby

selected_step = ARGV.first.to_i
selected_step = 5 if selected_step.zero?
steps = (1..selected_step)

cmd = [
  File.join(File.dirname(__FILE__), "rspec"),
  '-f', 'documentation',
  *steps.map { |s| ['-t', "step#{s}" ] }.flatten
]

STDERR.puts cmd.join(' ')

system(*cmd)
					 
